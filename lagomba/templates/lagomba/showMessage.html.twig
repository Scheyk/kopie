{% extends 'base.html.twig' %}

{% block title %}LaGomba{% endblock %}

{% block body %} 

  <div class="container">
    <p class="h3 text-center m-3">All contact messages from your Homepage :)</p>
      <div>    
        <table class="table table-striped">
          <thead>
            <tr>
              <th>name</th>
              <th>message</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
          {% for contact in contact %}
            <tr>
              <td>{{ contact.name }}</td>
              <td>{{ contact.message|slice(0, 40) }}</td>
              <td>{{ contact.email }}</td>
              <td><a href="/details/{{ contact.id }}" class="btn btn-info">View</a></td>
            </tr>
          {% endfor %}           
          </tbody>
        </table>    
      </div>
  </div>  

{% endblock %}
